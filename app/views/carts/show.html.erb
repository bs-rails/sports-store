<div class="row pt-3">
  <div class="col-md-9 col-sm-12">
    <% if @cart.empty? %>
      <h1 class="h2">Your cart is empty!</h1>
      <p class="fs-5 mt-3 fw-light"><%= link_to 'Browse products', root_path, class: 'text-decoration-none' %> to add them to the cart</p>
    <% else %>
      <h1 class='h3'>Your Cart</h1>
      <%= render @cart %>
      <div class="d-flex justify-content-between">
        <div class="d-flex">
          <%= button_to 'Clear Cart', cart_path, method: :delete, class: 'btn btn-outline-danger', data: { turbo_confirm: "Are you sure?" } %>
          <span class="mx-2"></span>
          <%= link_to 'Continue Shopping', root_path, class: 'btn btn-outline-primary' %>
        </div>
        <%= link_to 'Checkout', new_order_path, class: 'btn btn-primary' %>
      </div>
    <% end %>
  </div>
</div>
